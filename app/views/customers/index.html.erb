

<h1>顾客列表</h1>

<div id="customers">
  <% @customers.each do |customer| %>
    <%= render customer %>
    <%if current_admin? %>
        <p>
          <%= link_to "显示", customer, class: "btn btn-primary"%> |
          <%= link_to "注销顾客", customer_path(customer), method: :delete,class: "btn btn-danger"%>
        </p>
      <%else%>
      <p>
        <%= link_to "显示", customer, class: "btn btn-primary"%> |
        <%= link_to "返回", :back, class: "btn btn-secondary"%>
      </p>
      <%end %>
  <% end %>
</div>

