                    <%= image_tag current_user.image, alt: "User Avatar", class: "round", style: "height: 30px;width:30px;" %>&nbsp;
              <%else %>
                    <%= image_tag "1.png", alt: "User Avatar", class: "round", style: "height: 30px" %>&nbsp;
              <%end %>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to '我的订单', customer_orders_path(current_user.customer.id), class: "dropdown-item clickable", style: "color: #1b1e21; background-color: transparent;" %><span class="sr-only"></span></li>
            <li><%= link_to '个人信息', customer_path(current_user.customer.id), class: "dropdown-item clickable", style: "color: #1b1e21; background-color: transparent;" %><span class="sr-only"></span></li>
            <li><%= link_to '收货地址', customer_addresses_path(current_user.customer), class: "dropdown-item clickable", style: "color: #1b1e21; background-color: transparent;" %><span class="sr-only"></span></li>
            <li><%= link_to '充值', recharge_customer_path(current_user.id), class: "dropdown-item clickable", style: "color: #1b1e21; background-color: transparent;" %><span class="sr-only"></span></li>
          </ul>
        </div>
      <%end %>
        <% if current_user %>
          <div class="d-flex">
            <span class="navbar-text">Hello <%= current_user.user_name %></span>&nbsp;

            <% if current_customer? %>
              <span class="navbar-text">余额 ￥<%= current_user.balance %></span>&nbsp;
            <% end %>

            <%#= current_user.role %>
            <%= link_to '个人', user_path(current_user), class: "btn btn-navbar btn-info d-flex" %>&nbsp;
            <%= button_to '退出', destroy_user_session_path, method: :delete, class: "btn btn-secondary btn-navbar d-flex" %>
          </div>
        <% else %>
          <%= link_to '登录', new_user_session_path, class: "btn btn-primary btn-navbar d-flex" %>&nbsp;
          <%= link_to '注册', new_user_registration_path, class: "btn btn-secondary btn-navbar d-flex" %>
        <% end %>
      </div>
    </div>
  </nav>

  <!-- 用来提示信息-->

  <% if notice%>
    <div style= "margin: 0" class="alert alert-success alert-dismissible fade show" role="alert">
      <div class="notice  alert-success"  ><%= notice %></div>
      <input type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></input>
    </div>
  <%end %>
  <%if alert %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <div class="notice  alert-success"  ><%= alert %></div>
      <input type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></input>
