      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <!--            商城就是所有卖家的index  index显示他们的所有商店-->
            <%= link_to '关于', home_about_path , class: "nav-link#{" active" if controller_name == "home"}" %>
          </li>

          <% if current_user && current_user.role == "customer" %>
              <li class="nav-item">
    <!--            商城就是所有卖家的index  index显示他们的所有商店-->
                <%= link_to '商城', customers_commodities_path , class: "nav-link#{" active" if controller_name == "customers"}" %>
              </li>

              <li class="nav-item">
    <!--            消息就是模拟交易成功消息 以及各种#待定#的功能   包括确认订单地址~~~~-->
                <%= link_to '消息', home_recent_logins_path, class: "nav-link#{" active" if controller_name == "home"}" %>
              </li>
            <li class="nav-item">
  <!--            购物车就是所done = false的order-->
                <%= link_to '购物车', customer_cart_path(current_user.customer.id), class: "nav-link#{" active" if controller_name == "customers"}" %>
              <%#= link_to '购物车',customer_cart_path(current_user.customer), class: "nav-link#{" active" if controller_name == "users"}" %>
            </li>

<!--       #############     商家部分 ##########-->
          <% elsif current_user && current_user.role == "seller" %>
            <li class="nav-item">
              <!--            商城就是所有卖家的index  index显示他们的所有商店-->
              <%= link_to '我的店铺', seller_shops_path(current_user.seller), class: "nav-link#{" active" if controller_name == "sellers"}" %>
            </li>
            <li class="nav-item">
              <!--            商城就是所有卖家的index  index显示他们的所有商店-->
              <%= link_to '我的交易', seller_orders_path(current_user.seller), class: "nav-link#{" active" if controller_name == "sellers"}" %>
            </li>
<!--         #############   管理员部分 #########-->
          <% elsif current_user && current_user.role == "admin" %>
            <li class="nav-item">
              <%= link_to '所有交易', orders_admin_path(current_user.admin), class: "nav-link#{" active" if controller_name == "admin"}" %>
            </li>
            <li class="nav-item">
              <%= link_to '上市商品',commodities_admin_path(current_user.admin) , class: "nav-link#{" active" if controller_name == "admin"}" %>
            </li>
            <li class="nav-item">
              <%= link_to '所有已注册顾客',customers_path , class: "nav-link#{" active" if controller_name == "admin"}" %>
            </li>
            <li class="nav-item">
              <%= link_to '所有已注册商家',sellers_path , class: "nav-link#{" active" if controller_name == "admin"}" %>
            </li>
            <li class="nav-item">
              <%= link_to '所有用户', user_index_path,  class: "btn btn-primary d-flex" %>&nbsp;
            </li>

          <%end %>
          <%#= form_for(current_user, url: user_path(current_user), method: :patch, multipart: true, id: "avatarForm", style: "display: none;") do |f| %>
