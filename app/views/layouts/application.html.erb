              <%#= f.file_field :image, id: "avatarInput", style: "display: none;" %>
<!--            </div>-->
            <%#= f.submit 'Update Avatar', style: "display: none;" %>
          <%# end %>


        </ul>
        <%if current_customer? %>
        <div class="dropdown">
          <a class="btn btn-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
