<h2>编辑用户信息</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email字段注释掉了，因为取消了validatable -->
  <!-- <div class="mb-3">
   <%#= f.label :email, class: "form-label" %><br />-->
    <%#= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
<!--  </div> -->

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>当前正在等待确认: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %> <i>(留空表示不修改密码)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", minlength: 6 %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>字符以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :image , class: "form-label"%>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :user_name, class: "form-label" %><br />
    <%= f.text_field :user_name, autocomplete: "new-password", class: "form-control",placeholder:"Tom" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, class: "form-label" %> <i>(需要输入当前密码以确认更改)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.submit "确定", class: "btn btn-primary" %>
  </div>
<% end %>


<%= button_to "注销我的账户", registration_path(resource_name), data: { confirm: "确定要注销账户吗？", turbo_confirm: "确定要注销账户吗？" }, method: :delete, class: "btn btn-danger mb-3" %>

<%= link_to "返回", :back, class: "btn btn-secondary mb-3" %>

